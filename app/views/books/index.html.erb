
<h1>Books</h1><!--一覧部分-->
<th>Title</th>
<th>Body</th>
<% @books.each do |book| %>
 <span><%= book.title %></span>
 <span><%= book.body %></span>
 <%= link_to "Show", book_path(book.id) %>
 <%= link_to "Edit", edit_book_path(book.id) %>
 <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %> 
<br>
<% end %>

<h2>New book</h2><!--投稿部分-->
<% if @book.errors.any? %><!--バリデーションによるエラーメッセージの表示-->
  <%= @book.errors.count %>　errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @books, url: '/books',method: :post do |book| %><!--投稿箇所-->
  <p>Title</p>
  <%= book.text_field :title %>

  <p>Body</p>
  <%= book.text_area :body %>

  <%= book.submit 'Create Book' %>
<% end %>

